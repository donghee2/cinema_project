<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cinema.mapper.MemberMapper">
	<select id="login" parameterType="map" resultType="member">
		select * from member where user_email = #{userEmail} and user_passwd = #{userPasswd}
	</select>

	<insert id="insertMember" parameterType="member">
		insert into member values(#{userEmail}, #{userPasswd}, #{userName}, #{userNick}, #{userTel}
		, #{address}, 1000)
	</insert>
	
	<update id="updateMember" parameterType="String">
		update member set #{userPasswd}, #{userName}, #{userNick}, #{userTel}, #{address}
		where user_email = #{userEmail}
	</update>
	
	<delete id="deleteMember" parameterType="String">
		delete from member where user_email = #{userEmail} and user_passwd = #{userPasswd}
	</delete>
	
	<select id="selectUserEmail" parameterType="map" resultType="String">
		select user_email from member where user_name = #{userName} and user_tel = #{userTel}
	</select>
</mapper>